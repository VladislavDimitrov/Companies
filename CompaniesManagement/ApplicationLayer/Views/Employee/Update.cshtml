@model CreateEmployeeViewModel
@{
    ViewData["Title"] = "Update";
}

<h3>Update Employee</h3>
<form class="col-lg-6" asp-controller="Employee" asp-action="Update">
    <div class="form-group">
        <input type="hidden" asp-for="@Model.CompanyID">
        <label>Employ at:</label>
        @if (Model.Offices.Count == 0)
        {
            <p class="text-danger">No offices exist in the system yet. Please create an office before employing.</p>
            <select asp-for="OfficeID" asp-items="Model.Offices"> </select>
            <span asp-validation-for="@Model.OfficeID" class="text-danger"></span>
        }
        else
        {
            <select asp-for="OfficeID" asp-items="Model.Offices"> </select>
            <span asp-validation-for="@Model.OfficeID" class="text-danger"></span>
        }
    </div>
    <div class="form-group">
        <label>First name</label>
        <input asp-for="@Model.FirstName" class="form-control" />
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Last name</label>
        <input asp-for="@Model.LastName" class="form-control" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Experience level</label>
        <input asp-for="@Model.ExperienceLevel" class="form-control" />
        <span asp-validation-for="@Model.ExperienceLevel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Vacation days</label>
        <input asp-for="@Model.VacationDays" class="form-control" />
        <span asp-validation-for="@Model.VacationDays" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Salary</label>
        <input asp-for="@Model.Salary" class="form-control" />
        <span asp-validation-for="@Model.Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Starting Date</label>
        <input type="date" asp-for="@Model.StartingDate" class="form-control" />
        <span asp-validation-for="@Model.StartingDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">Submit</button>
</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial">
}
